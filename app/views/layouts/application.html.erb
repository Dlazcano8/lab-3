    <style>
      body {
          font-family: Monocraft, sans-serif     
      }

      footer {
        background-color: rgb(202, 238, 255);
        padding: 20px 0;
        position: fixed;
        bottom: 0;
        width: 100%
      }
      
    </style>   
  
  </head>

  <body>
    
