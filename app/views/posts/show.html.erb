
<div class="row" style="margin-left: 25px; margin-top: 25px;">
    <div class="col">
        <h1><%= @post.title %></h1>
    </div>
</div> 

<div class="row justify-content-center " style="margin-bottom: 20px">
    <div class="col-2 border border-black border-4 rounded-4 " style="padding: 20px; background-color: white; margin: 5px">
        <div class="row border border-black border-4 rounded-4 text-center" style="margin: auto">
            <i class="bi bi-person-square" style="color: black;"></i>
        </div>
        <div class="row border border-black border-4 rounded-4" style="color: black; margin:5px" >
            <% @user = @users.find_by(id: @post.user_id) %>
                <% if @user %>
                <h5><%= @user.name %></h5>
            <% end %>
        </div>
    </div>
    <div class="col-4 border border-black border-4 rounded-4" style="padding: 20px; background-color: white; color: black; margin: 5px ">
        <p><%= @post.content %></p>   
    </div>
    <div class="col-2 border border-black border-4 rounded-4" style="padding: 20px; background-color: white; color: black; margin: 5px">
        <div class="row justify-content-center border border-black border-4 rounded-4" style="padding-left: 20px; padding-top: 5px; margin:5px">
            <p><%= @post.published_at.strftime("%Y-%m-%d") %></p>
        </div>
        <div class="row justify-content-center border border-black border-4 rounded-4" style="padding-left: 20px; padding-top: 5px; margin:5px">
            <p>Answers: <%= @post.answers_count %></p>
        </div>
        <div class="row justify-content-center border border-black border-4 rounded-4" style="padding-left: 20px; padding-top: 5px; margin:5px">
            <p>Likes: <%= @post.likes_count %></p>
        </div>
    </div>
</div>

<div class="container">
    <%= link_to posts_path, class: "btn btn-light" do%>
        <i class="bi bi-arrow-90deg-left"></i> Back
    <% end %>
</div>